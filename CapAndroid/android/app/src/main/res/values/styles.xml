<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_title">
        <item name="android:textSize">@dimen/text_extralarge</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
    </style>
    <style name="text_subtitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="text_button_no">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="text_button_yes">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/blue_gray</item>
    </style>

    <style name="text_guide">
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="text_guide_head">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="text_guide_body">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="text_exercise_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_exercise_detail">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>