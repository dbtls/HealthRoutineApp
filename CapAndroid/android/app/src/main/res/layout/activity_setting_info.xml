<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_setting_info_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_setting_info_textView_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="149dp"
            android:layout_marginTop="16dp"
            android:text="사용자아이디"
            android:textAppearance="@style/text_guide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_info_imageView_user_profile" />

        <ImageView
            android:id="@+id/activity_setting_info_imageView_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="84dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_setting_info_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rectangle_bright_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_setting_info_layout_top">

        <TextView
            android:id="@+id/textView_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="28dp"
            android:text="몸무게"
            android:textAppearance="@style/text_guide_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="28dp"
            android:text="체지방량"
            android:textAppearance="@style/text_guide_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="28dp"
            android:text="골격근량"
            android:textAppearance="@style/text_guide_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_fat"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toEndOf="@+id/textView_weight" />

        <TextView
            android:id="@+id/textView_user_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:text="신체 데이터"
            android:textAppearance="@style/text_guide_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_fat_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="kg"
            app:layout_constraintBottom_toTopOf="@+id/textView_fat"
            app:layout_constraintStart_toEndOf="@+id/textView_user_fat" />

        <TextView
            android:id="@+id/textView_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="kg"
            app:layout_constraintBottom_toTopOf="@+id/textView_weight"
            app:layout_constraintStart_toEndOf="@+id/textView_user_weight" />

        <TextView
            android:id="@+id/textView_muscle_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="kg"
            app:layout_constraintBottom_toTopOf="@+id/textView_muscle"
            app:layout_constraintStart_toEndOf="@+id/textView_user_muscle" />

        <TextView
            android:id="@+id/textView_user_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="24dp"
            android:text="70.5"
            app:layout_constraintBottom_toTopOf="@+id/textView_weight"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_user_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="24dp"
            android:text="30.1"
            app:layout_constraintBottom_toTopOf="@+id/textView_muscle"
            app:layout_constraintStart_toEndOf="@id/textView_user_weight" />

        <TextView
            android:id="@+id/textView_user_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="24dp"
            android:text="20.3"
            app:layout_constraintBottom_toTopOf="@+id/textView_fat"
            app:layout_constraintStart_toEndOf="@id/textView_user_muscle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/activity_setting_info_edit_button"
        android:layout_width="118dp"
        android:layout_height="63dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="36dp"
        android:text="수정하기"
        android:background="@drawable/button_no_gray"
        android:textAppearance="@style/text_button_yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_setting_info_layout_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>