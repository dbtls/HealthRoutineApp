<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="58dp"
        android:text="루틴 만들기"
        android:textColor="#0E2850"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="223dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:background="@drawable/polygon_1"
                android:gravity="top"
                android:padding="15dp"
                android:text="AI에게 루틴\n 추천받기"
                android:textColor="#002B6A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginStart="175dp"
                android:background="@drawable/polygon_2"
                android:gravity="bottom|right"
                android:padding="15dp"
                android:text="나만의 루틴 \n 리스트 만들기"
                android:textColor="#003342"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="만들어진 루틴 리스트 보기"
            android:textColor="#0E2850"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"
            android:text="사용자 정보 입력"
            android:textColor="#0E2850"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>