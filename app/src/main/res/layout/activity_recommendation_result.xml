<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="800dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="left|bottom"
            android:padding="30dp"
            android:background="@drawable/top"
            android:clipToOutline="true"
            android:elevation="4dp">

            <TextView
                android:id="@+id/user_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:gravity="left|bottom"
                android:fontFamily="@font/notosans"
                android:text="@string/user_"
                android:textAppearance="@style/user_"
                app:lineHeight="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_marginTop="160dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/white" >
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bottom"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginTop="620dp"
            android:background="#66F0F0F0" >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_1"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp" >
                <View
                    android:id="@+id/button_1_background"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_1_background"
                    />
                <TextView
                    android:id="@+id/button_1_text"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/button_1_text"
                    android:textAppearance="@style/button_1_text"
                    android:gravity="center_horizontal|center_vertical"
                    />
            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_2"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp" >
                <View
                    android:id="@+id/button_2_background"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_2_background"
                    />
                <TextView
                    android:id="@+id/button_2_text"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/button_2_text"
                    android:textAppearance="@style/button_2_text"
                    android:gravity="center_horizontal|center_vertical"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>