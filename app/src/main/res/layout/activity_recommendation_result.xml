<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ai_"
        android:layout_width="360dp"
        android:layout_height="800dp"
        android:background="#FCFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="360dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/top"
            android:clipToOutline="true"
            android:elevation="4dp">

            <TextView
                android:id="@+id/user_"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/user_"
                android:textAppearance="@style/user_"
                app:lineHeight="24sp" />
        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bottom"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="620dp"
            android:clipToOutline="true"
            android:background="#66F0F0F0" >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_1"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp" >
                <View
                    android:id="@+id/button_1_background"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_1_background"
                    />
                <TextView
                    android:id="@+id/button_1_text"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/button_1_text"
                    android:textAppearance="@style/button_1_text"
                    android:gravity="center_horizontal|center_vertical"
                    />
            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_2"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp" >
                <View
                    android:id="@+id/button_2_background"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_2_background"
                    />
                <TextView
                    android:id="@+id/button_2_text"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/button_2_text"
                    android:textAppearance="@style/button_2_text"
                    android:gravity="center_horizontal|center_vertical"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/middle"
            android:layout_width="360dp"
            android:layout_height="460dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="160dp"
            android:background="#FCFCFC" >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/routine_1"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp" >
                <ImageView
                    android:id="@+id/routine_1_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/routine_1_icon"
                    />
                <TextView
                    android:id="@+id/routine_1_title"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/routine_1_name"
                    android:textAppearance="@style/routine_name"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/routine_1_detail"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/routine_1_detail"
                    android:textAppearance="@style/routine_detail"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>