<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityExerciseInformation_layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintBottom_toTopOf="@id/activityExerciseInformation_scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activityExerciseInformation_textViewExerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="start|top"
            android:includeFontPadding="false"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityExerciseInformation_textViewExercisePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_regular"
            android:gravity="start|top"
            android:includeFontPadding="false"
            android:textColor="@color/darkWater"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewExerciseName" />

        <ImageView
            android:id="@+id/workoutImage"
            android:layout_width="352dp"
            android:layout_height="281dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="68dp"
            android:contentDescription="@null"
            android:src="@drawable/benchpressimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activityExerciseInformation_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/water_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_layoutTop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/activiyExerciseInformation_textViewGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="운동 가이드"
                android:textAppearance="@style/textGuide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewStartingPostureHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="시작 자세"
                android:textAppearance="@style/textGuideHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activiyExerciseInformation_textViewGuide" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewStartingPostureBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="1. 벤치에 누워 두 발을 바닥에 고정해주세요. \n2. 어깨를 뒤로 당긴 후 고정해 어깨가 가슴보다 뒤에 위치하게 합니다.\n3. 허리는 자연스러운 아치 모양이 되게 해주세요.\n4. 어깨너비보다 약간 넓게 두 손으로 바벨을 잡아주세요.\n5. 허리와 어깨를 고정한채로 바벨을 들어 가슴 위에 위치하게 합니다."
                android:textAppearance="@style/textGuideBody"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewStartingPostureHead" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewMovementHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="운동 동작"
                android:textAppearance="@style/textGuideHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewStartingPostureBody" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewMovementBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="1. 가슴 아래쪽에 바벨이 닿도록 천천히 바벨을 내려주세요.\n2. 이때, 팔뚝(전완)은 바닥과 수직이 되어야 합니다.\n3. 천천히 바벨을 들어 올려 시작 자세로 돌아오세요."
                android:textAppearance="@style/textGuideBody"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewMovementHead" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewBreathingHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="호흡법"
                android:textAppearance="@style/textGuideHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewMovementBody" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewBreathingBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="팔을 구부릴 때 숨을 들이쉬고, 팔을 밀 때 숨을 내쉬세요."
                android:textAppearance="@style/textGuideBody"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewBreathingHead" />

            <TextView
                android:id="@+id/activityExerciseInformation_textViewVideoHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="영상"
                android:textAppearance="@style/textGuideHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityExerciseInformation_textViewBreathingBody" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>