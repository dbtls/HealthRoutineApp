<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="30dp">

    <ImageView
        android:id="@+id/view_exercise_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_exercise_textview_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/view_exercise_textview_information"
        app:layout_constraintStart_toEndOf="@id/view_exercise_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_exercise_textview_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/view_exercise_imageview"
        app:layout_constraintEnd_toStartOf="@id/view_exercise_button"
        app:layout_constraintTop_toBottomOf="@id/view_exercise_textview_name" />

    <Button
        android:id="@+id/view_exercise_button"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:text="+"
        android:textSize="@dimen/text_large"
        android:textColor="@color/blue_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_yes"/>
</androidx.constraintlayout.widget.ConstraintLayout>