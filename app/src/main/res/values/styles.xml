<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
    </style>

    <style name="button_1_text">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="button_2_text">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="textGuide">
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="textGuideHead">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="textGuideBody">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="exercise_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="exercise_detail">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/notosans</item>
    </style>
</resources>